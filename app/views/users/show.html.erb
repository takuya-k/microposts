<!-- ユーザー名と画像を表示 -->
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user) %>
        <%= @user.name %>  
      </h1>
    </section>

    <section class="profile">
      <!-- 自己紹介文の表示 -->
      <div class="panel panel-primary">
        <div class="panel-heading">自己紹介</div>
        <div class="panel-body"><%= simple_format(@user.profile) %></div>
      </div>
      
      <!-- 地域の表示 -->
      <div class="panel panel-primary">
        <div class="panel-heading">地域</div>
        <div class="panel-body"><%= @user.area %></div>
      </div>    
      
      <!-- 生年月日の表示 -->
      <div class="panel panel-primary">
        <div class="panel-heading">生年月日</div>
        <div class="panel-body">
          <%= @user.birthday.to_s[0, 4] %>年
          <%= @user.birthday.to_s[4, 2] %>月
          <%= @user.birthday.to_s[6, 2] %>月
        </div>
      </div>    
      
      <!-- 最終更新日の表示 -->
      <div class="panel panel-primary">
        <div class="panel-heading">最終更新日</div>
        <div class="panel-body"><%= @user.updated_at %></div>
      </div>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts(<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>  
      </ol>
    <% end %>
  </div>
</div>